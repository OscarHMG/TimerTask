<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#52bf90"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <Button
            android:id="@+id/close_advertising"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iAgendador"
                android:textSize="38sp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/close_advertising" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evite la excesiva publicidad"
                android:textSize="18sp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="75dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/close_advertising" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalice su iAgendador mediante nuestor portal web"
            android:textSize="18sp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="75dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/close_advertising" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalice su iAgendador mediante nuestor portal web"
            android:textSize="18sp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="75dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/close_advertising" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_advertising"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:layout_marginTop="80dp"
            android:background="@android:color/darker_gray"
            />
        <ImageView
            android:id="@+id/purchase"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@android:color/holo_blue_dark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/img_advertising"
            />
    </RelativeLayout>

</LinearLayout>